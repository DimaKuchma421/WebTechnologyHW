<%-include('partials/header.ejs')%>
<main>
  <form class="container" action="/reg" method="post">
    <h1>РЕГІСТРАЦІЯ</h1>
    <div class="label">
        <label >Username</label>
        <input type="text" name="username" required>
        <label >Email</label>
        <input type="text" name="email" required>
        <label >Password</label>
        <div class="accbtn">
          <input class="password" type="password" name="password" required>
          <input type="checkbox" onclick="showPassword()" style="width: 30px;">
        </div>
    </div>
    <button type="reg">Регістрація</button>
    <p><a href="/signIn">Вже є аккаунт? Зайдіть у нього</a></p>
  </form>
</main>
<%-include('partials/footer.ejs')%>
</body>
</html>